{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergePatch"
  ],
  "branchConcurrentLimit": 20,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "node"
      ],
      "automerge": false
    },
    {
      "groupName": "jest",
      "packagePatterns": [
        "jest"
      ]
    },
    {
      "groupName": "eslint",
      "packagePatterns": [
        "eslint"
      ],
      "excludePackagePatterns": [
        "eslint-config-next"
      ]
    },
    {
      "groupName": "stylelint",
      "packagePatterns": [
        "stylelint"
      ]
    },
    {
      "groupName": "nextjs",
      "groupSlug": "next.js",
      "matchPackagePatterns": [
        "eslint-config-next",
        "next",
        "react",
        "@types/react",
        "@types/react-dom"
      ]
    }
  ]
}